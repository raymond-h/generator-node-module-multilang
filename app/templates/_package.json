{
	"name": "<%= name %>",
	"description": "<%= description %>",
	"version": "0.0.0",
	"license": "MIT",
	"main": "lib/index.js",
	"author": "<%= author %>",
	"scripts": {
		"prepublish": "grunt build",
		"test": "grunt test"
	},
	"devDependencies": {
		"grunt": "*",
		"load-grunt-tasks": "*",
<% if(language === 'coffee') { %>
		"grunt-contrib-coffee": "*",
		"grunt-coffeelint": "*",
<% } %>
		"grunt-contrib-watch": "*",
		"chai": "*",
		"grunt-mocha-test": "*"
	},
	"dependencies": {
<% _.forEach(deps, function(dep, i) { print('\t\t"' + dep + '": "*"' + (i < deps.length-1 ? ',\n' : '')); }); %>
	}
}
